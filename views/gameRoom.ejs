<!doctype html>
<html>
<head>
    <title> Oversketch </title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link type="text/css" href="/public/stylesheets/style.css">
    <style>
        body{
            margin-top: 30px;
        }
    </style>
</head>
<body>
<div class="container">
    <div  id="createUsername" class="col-md-8">
        <h1> Pick a username </h1>
        <h2> Other people in this room will see you as this </h2>
        <input type="text" id="username">
        <button class="btn btn-primary" id="userEnter"> Enter </button>
    </div>
    <div id="messageArea" class="row hidden">
        <div id="userList" class="col-md-4">
            <div class="well">
                <h3> Online users</h3>
                <ul class="list-group"></ul>
            </div>
        </div>
        <div class="col-md-8">
            <div class="chat" id="chat">
            </div>
            <div class="form-group">
                <label> Enter Message</label>
                <textarea class="form-control" id="message"></textarea>
                <br>
                <input id="chatSubmit" class="btn btn-primary" value="Send Message">
            </div>
        </div>
    </div>
</div>
<script>
    $(function(){
        var socket = io.connect();
        var $message = $('#message');
        var $username = $('#username');
        var $userForm = $('#createUsername');
        var $userEnter = $('#userEnter');
        var $messageArea = $('#messageArea');
        var $userlist = $('#userList');
        var $chat = $('#chat');
        var user = '';
        var room = <%-JSON.stringify(roomName)%>;
        console.log(room);
        socket.on('connect', function() {
            socket.emit('room', room)
        });

        $(document).on('click', '#userEnter', function() {
            user = $username.val();
            $userForm.addClass("hidden");
            $messageArea.removeClass("hidden");
            var messageData = {
                user: user,
                roomName: room
            }
            socket.emit('new user', messageData);
        });

        socket.on('add user', function(data){
            $chat.append('<div class="well">' + data.msg + ' has joined.' + '</div>')
            $userlist.append('<div class="well">' + data.msg + '</div>')
            console.log(data);
        });
        $(document).on('click', '#chatSubmit', function () {
            console.log('Submitted');
            var messageData = {
                messageVal: $message.val(),
                roomName: room,
                user: user
            };
            socket.emit('send message', messageData);
            $message.val('');
        });


        socket.on('new message', function(data){
            $chat.append('<div class="well">' + data.msg + '</div>');
        })

    });
</script>
</body>
</html>